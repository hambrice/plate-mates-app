<%= form_tag recipes_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>
<%= form_tag "#", :id => "categories" do %>
  <% Recipe.category_list.each do |category| %>
    <%= check_box_tag category %> <%=category%>
  <% end %>
  <%= submit_tag "Categories", id: "category_submit"  %>
<% end %>
<wrapper>
<%= render partial: 'recipe_summary', collection: @recipes, as: :recipe %>
</wrapper>
<script id="recipes-template" type="text/x-handlebars-template">
  {{#each this.recipes}}
  <div class= "card"><img src="{{image}}" style="width:100%">
    <div class="container">
      <h4><a href="{{../path}}/{{id}}"> {{name}}</a></h4>
      <div>Prep Time:{{prep_time}} Cook Time:{{cook_time}}</div>
    </div>
  </div>
  {{/each}}
</script>
