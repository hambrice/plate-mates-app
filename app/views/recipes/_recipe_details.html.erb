
<% if current_user && current_user != recipe.user %>
  <% if current_user.liked_recipes.include?(recipe) %>
    <%= link_to "Remove this recipe from saved list", recipe_like_path(recipe), method: "delete" %><br><br>
  <% else %>
    <%= link_to "Save this recipe", recipe_likes_path(recipe), method: "post"%><br><br>
  <% end %>
<% end %>
<img src="<%= recipe.image %>"><br><br>
Prep Time: <strong><%= recipe.prep_time %></strong>
Cook Time: <strong><%= recipe.cook_time %></strong><br><br>
<% ingredient_list(recipe).each do |ing| %>
<%= ing %><br>
<% end %><br><br>
<%=recipe.instructions%>
