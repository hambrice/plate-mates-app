<% if current_user %>
  <% if current_user.liked_recipes.include?(recipe) %>
    <%= link_to "Remove this recipe from saved list", unlike_recipe_path, method: "post" %><br><br>
  <% else %>
    <%= link_to "Save this recipe", like_recipe_path, method: "post"%><br><br>
  <% end %>
<% end %>
Prep Time:<strong><%= recipe.prep_time %></strong>
Cook Time: <strong><%= recipe.cook_time %></strong><br><br>
<% recipe.recipe_ingredients.each do |ing| %>
<%="#{ing.ingredient.quantity}" + " " + "#{ing.ingredient.name}" %><br>
<% end %><br><br>
<%=recipe.instructions%>
